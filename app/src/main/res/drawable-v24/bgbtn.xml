<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="200dp" />
            <stroke android:width="1dip" android:color="#3385d9" />
            <gradient android:angle="-90" android:startColor="#7E9CD3" android:endColor="#8FA8D8"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="200dp" />
            <stroke android:width="1dip" android:color="#CDDC39" />
            <solid android:color="#3385d9"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="200dp" />
            <stroke android:width="1dip" android:color="#6200EE" />
            <gradient android:angle="-90" android:startColor="#3385d9" android:endColor="#3C8CDD" />
        </shape>
    </item>
</selector>